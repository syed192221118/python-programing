num1 = int(input("Enter the first number: "))
num2 = int(input("Enter the second number: "))

addition = num1 + num2
subtraction = num1 - num2
multiplication = num1 * num2

# Integer division (result will be a float if any operand is a float)
integer_division = num1 // num2

# Floor division (result will be an integer if both operands are integers)
floor_division = num1 // num2

modulo_division = num1 % num2

print("Addition:",addition)
print("Subtraction:",subtraction)
print("Multiplication:",multiplication)

# Handling division by zero
if num2 != 0:
    print("Integer division:",integer_division)
    print("Floor division:", floor_division)
    print("Modulo division:",modulo_division)
else:
    print("Division and modulo operations are not possible with the second number being zero.")
